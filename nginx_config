# Redirect www to non-www (HTTP)
server {
    listen 80;
    server_name www.titanvest.in;
    return 301 https://titanvest.in$request_uri;
}

# Main HTTPS server block for non-www
server {
    server_name titanvest.in;
    return 301 https://$host$request_uri;

    location / {
        proxy_pass http://unix:/tmp/gunicorn.sock;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /static {
        alias /home/ubuntu/v20algo/static;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/titanvest.in/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/titanvest.in/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

# Fallback HTTP server block for Certbot
server {
    if ($host = titanvest.in) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name titanvest.in;
    return 404; # managed by Certbot
}
